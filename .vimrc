let mapleader=","

filetype plugin indent on
set autoindent
set autoread
set backspace=indent,eol,start
set cursorline
set hidden
set laststatus=2
set nocompatible
set number
set splitbelow
set splitright
syntax on

let g:netrw_banner=0
let g:netrw_winsize=20
let g:netrw_liststyle=3
let g:netrw_localrmdir='rm -r'
nnoremap <leader>n :Lexplore<CR>
